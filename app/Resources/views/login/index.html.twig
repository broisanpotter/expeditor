{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('bundles/user/css/login.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
    <h1>Connexion :</h1>

    {% if echecConn == true %}
        <h3>Erreur lors de la saisie du mot de passe ou de l'adresse mail</h3>
    {% endif %}

    <form class="login" action="{{ path('login_new') }}" method="post">
        <div>
            <label for="username">Identifiant :</label>
            <input type="text" id="username" name="username"/>
        </div>

        <div>
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="mdp"/>
        </div>

        <button type="submit">Connexion</button>
    </form>

{% endblock %}