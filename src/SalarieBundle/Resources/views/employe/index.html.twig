{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Gestion des employ√©s</h1>

        <div class="col-lg-12">
        <table class="table table-sm table-bordered text-center">
            <thead>
                <tr class="thead-dark">
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Manager</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for employe in employes %}
                <tr>
                    <td><a href="{{ path('employe_show', { 'id': employe.id }) }}">{{ employe.id }}</a></td>
                    <td>{{ employe.nom }}</td>
                    <td>{{ employe.prenom }}</td>
                    <td>{{ employe.manager }}</td>
                    <td>
                        <button class="btn btn-warning redirect-modify" onclick="document.location.href='{{ path('employe_edit', { 'id': employe.id }) }}'">Modifier</button>
                        <button class="btn btn-danger redirect-delete" onclick="document.location.href='{{ path('employe_delete', { 'id': employe.id }) }}'">Supprimer</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>

    <ul>
        <li>
            <a href="{{ path('employe_new') }}">Create a new employe</a>
        </li>
    </ul>
{% endblock %}