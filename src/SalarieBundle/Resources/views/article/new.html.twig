{% extends 'navbar.html.twig' %}

{% block body %}
    <h1 class="h1 text-center">Creation d'un article</h1>

    <div class="col-lg-4 offset-lg-4">
        <div>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.libelle, { 'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.poids, { 'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Créer" />
                <button class="btn btn-primary" onclick="document.location.href='{{ path('article_index') }}'">Retour à la liste</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
