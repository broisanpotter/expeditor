{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commande</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ commande.client }}</td>
            </tr>
            <tr>
                <th>Employe</th>
                <td>{{ commande.employe }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ commande.etat }}</td>
            </tr>
            <tr>
                <th>Liste Article</th>
                {% for articleCommande in articlesCommande %}
                    <tr>
                        <th>Id</th>
                        <td>{{ articleCommande.id }}</td>
                    </tr>
                    <tr>
                        <th>Commande</th>
                        <td>{{ articleCommande.commande }}</td>
                    </tr>
                    <tr>
                        <th>Article</th>
                        <td>{{ articleCommande.article }}</td>
                    </tr>
                    <tr>
                        <th>Quantite</th>
                        <td>{{ articleCommande.quantite }}</td>
                    </tr>
                    <tr>
                        <th>Poidstotal</th>
                        <td>{{ articleCommande.poidsTotal }}</td>
                    </tr>
                {% endfor %}
            </tr>
            <tr>
                <th>Poids Total commande</th>
                <td>{{ commande.poidsTotal }}</td>
            </tr>
            <tr>
                <th>Poids Total commande avec Carton</th>
                <td>{{ commande.poidsTotalAvecCarton }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commande_edit', { 'id': commande.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
