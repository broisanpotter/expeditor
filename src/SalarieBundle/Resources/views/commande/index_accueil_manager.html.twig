</div>

<div class="container-fluid">
    <table class="table">
        <thead class="thead-dark">


            <tr>
                <th>Numéro</th>
                <th>Date</th>
                <th>Nom du Client</th>
                <th>Employe responsable</th>
                <th>Etat</th>
                <th>Adresse facturation</th>

            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td><a href="{{ path('commande_show', { 'id': commande.id }) }}">{{ commande.id }}</a></td>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ commande.client }}</td>
                <td>{{ commande.employe }}</td>
                <td>{{ commande.etat }}</td>
                <td>Mettre Adresse client ici</td>
            </tr>
        {% endfor %}
        </tbody>
        </thead>
    </table>

