{% extends 'base.html.twig' %}

{% block body %}
    {% if statut == "error" %}
        <h3 class="h3 text-center" style="color: #960405">Erreur lors de la saisie de l'indentifiant/mot de passe</h3>
    {% endif %}
    <div style="margin-top: 10%">
        <h1 class="h1 text-center">EXPEDITOR</h1>
        <h2 class="h2 text-center">Connexion</h2>
        <br/>
        <div class="col-lg-4 offset-lg-4 border shadow p-3 mb-5 bg-white rounded align-middle"
             style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <div>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.email, { 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password, { 'attr': {'class': 'form-control'}}) }}
                </div>
                <br/>
                <div class="text-center">
                    {{ form_row(form.save, { 'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
            <br/>
        </div>
    </div>
{% endblock %}

